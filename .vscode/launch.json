  "version": "0.2.0",
  "configurations": [
      {
          "name": "run NPM with DEBUG",
          "type": "node",
          "request": "launch",
          "cwd": "${workspaceRoot}",
          "runtimeExecutable": "npm",
          "runtimeArgs": [
              "run-script", "debug"
          ],
          "port": 5858,
          "env": {
              "NODE_ENV": "development",
              "LOG_LEVEL": "info",
              "MQTTHOST": "vh-mqtt.home",
              "MQTTPORT": "1883",
              "TELNETHOST": "192.168.10.94",
              "TELNETPORT": "8234"
          },
          "outputCapture": "std"
      }

  ]
}